{
  "name": "@deca-inc/threadly",
  "version": "0.0.1",
  "description": "Inline workers/threads right in the middle of your code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./transformer-plugin": {
      "types": "./dist/transformer-plugin.d.ts",
      "default": "./dist/transformer-plugin.js"
    },
    "./vite-plugin": {
      "types": "./dist/vite-plugin.d.ts",
      "default": "./dist/vite-plugin.js"
    },
    "./webpack-loader": {
      "types": "./dist/webpack-loader.d.ts",
      "default": "./dist/webpack-loader.js"
    }
  },
  "bin": {
    "threadly": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "run-example": "ts-node --inspect examples/${npm_config_file:-basic-example.ts}",
    "run-example:break": "ts-node --inspect-brk examples/${npm_config_file:-basic-example.ts}"
  },
  "keywords": [
    "threads",
    "workers",
    "typescript",
    "transformer",
    "inline",
    "web-workers",
    "worker-threads",
    "parallel",
    "concurrent",
    "shared-memory",
    "sharedarraybuffer"
  ],
  "author": "Deca Inc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deca-inc/threadly.git"
  },
  "bugs": {
    "url": "https://github.com/deca-inc/threadly/issues"
  },
  "homepage": "https://github.com/deca-inc/threadly#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "comlink": "^4.4.1",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "threads": "^1.6.5"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.8",
    "@types/mathjs": "^9.4.2",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "mathjs": "^14.5.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "ws": "^8.18.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "testTimeout": 10000,
    "forceExit": true
  }
}
