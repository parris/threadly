{
  "name": "@deca-inc/threadly",
  "version": "0.0.1",
  "description": "Inline workers and threads",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "threadly": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "run-example": "ts-node --inspect examples/${npm_config_file:-basic-example.ts}",
    "run-example:break": "ts-node --inspect-brk examples/${npm_config_file:-basic-example.ts}"
  },
  "keywords": [
    "threads",
    "workers",
    "typescript",
    "transformer",
    "inline"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "comlink": "^4.4.1",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "threads": "^1.6.5"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.8",
    "@types/mathjs": "^9.4.2",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "mathjs": "^14.5.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "ws": "^8.18.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "testTimeout": 10000,
    "forceExit": true
  }
}
